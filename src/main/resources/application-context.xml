<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
							http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<context:component-scan base-package="uk.co.claritysoftware.alexa.skills.pontoon" />

	<bean class="freemarker.template.Configuration">
		<constructor-arg value="#{T(freemarker.template.Configuration).VERSION_2_3_23}" />
		<property name="defaultEncoding" value="UTF-8" />
		<property name="logTemplateExceptions" value="false" />
		<property name="templateExceptionHandler" value="RETHROW_HANDLER" />
		<property name="templateLoader">
			<bean class="freemarker.cache.ClassTemplateLoader">
				<constructor-arg value="uk.co.claritysoftware.alexa.skills.pontoon.Application" />
				<constructor-arg value="/uk/co/claritysoftware/alexa/skills/pontoon/speech/templates" />
			</bean>
		</property>
	</bean>
</beans>
